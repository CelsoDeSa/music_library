<%= form_with(model: album, local: true) do |form| %>
  <% if album.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(album.errors.count, "error") %> prohibited this album from being saved:</h2>

      <ul>
        <% album.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="mb-3">
    <%= form.label :artist, class: 'form-label' %>
    <%= form.select(:artist, [], {}, {class: 'form-select'}) %>
  </div>

  <div class="mb-3">
    <%= form.label :album_name, class: 'form-label' %>
    <%= form.text_field :album_name, class: 'form-control' %>
  </div>

  <div class="mb-3">
    <%= form.label :year, class: 'form-label' %>
    <%= form.number_field :year, class: 'form-control' %>
  </div>

  <div class="actions">
    <%= form.submit "Create Album", class: "btn btn-primary" %>
  </div>
<% end %>
