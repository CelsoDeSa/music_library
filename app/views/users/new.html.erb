<h1>Sign Up</h1>

<%= form_for @user do |f|%>
  <%= f.label :full_name %><br>
  <%= f.text_field :full_name %><br>

  <%= f.label :username %><br>
  <%= f.text_field :username %><br>

  <%= f.label :password %><br>
  <%= f.password_field :password, autocomplete: "off" %><br>

  <% if is_admin? %>
    <%= f.label :role %><br>
    <%= f.select(:role, ["user", "admin"]) %><br>
  <% else %>
    <%= f.hidden_field :role, value: "user" %><br>
  <% end %>

  <%= f.submit %>
<%end%>
