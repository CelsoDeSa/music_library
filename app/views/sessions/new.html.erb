<% flash.each do |type, msg| %>
  <div>
    <%= msg %>
  </div>
<% end %>

<h1>Login</h1>
   
<%= form_tag '/login' do %>
    <div class="mb-3">    
        <%= label_tag :username, nil, class: 'form-label' %>
        <%= text_field_tag :username, nil, class: 'form-control' %>
    </div>
    <div class="mb-3">  
        <%= label_tag :password, nil, class: 'form-label' %>
        <%= password_field_tag :password, nil, class: 'form-control' %>
    </div>
    <%= submit_tag "Login", class: "btn btn-primary" %>

<%end%>

<br>

<%= button_to "Sign Up", '/users/new', method: :get, class: "btn btn-dark" %>
